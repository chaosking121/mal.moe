<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackgroundGray"
    tools:context="moe.mal.waifus.activity.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textEmailAddress"
                android:hint="name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText android:id="@+id/seriesField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="series" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <EditText android:id="@+id/messageField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="custom message (optional)" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/waifuTypePromptLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waifu Type"
            android:typeface="normal"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <Spinner
            android:id="@+id/waifuTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/waifuAuthLevelPromptLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Auth Level"
            android:typeface="normal"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <Spinner
            android:id="@+id/waifuAuthLevelSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:spinnerMode="dropdown"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="16dp"
            android:layout_weight="0.5"
            android:text="Create"/>


    </LinearLayout>

</ScrollView>