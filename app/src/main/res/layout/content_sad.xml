<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray">


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_guide_1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_guide_2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_guide_3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h_guide_4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h_guide_1"
        app:layout_constraintBottom_toTopOf="@id/h_guide_2"
        app:layout_constraintDimensionRatio="H1,1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/lily"
        android:id="@+id/lily_button"
        android:scaleType="fitXY"
        android:background="@null"
        android:onClick="lilySelected"
        android:contentDescription="@string/lily" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/h_guide_3"
        app:layout_constraintBottom_toTopOf="@id/h_guide_4"
        app:layout_constraintDimensionRatio="H1,1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/sad"
        android:id="@+id/sad_button"
        android:scaleType="fitXY"
        android:background="@null"
        android:onClick="sadSelected"
        android:contentDescription="@string/sad" />

</android.support.constraint.ConstraintLayout>